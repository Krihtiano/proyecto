<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <EditText
        android:id="@+id/txtNIF"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtPassword"
        android:layout_marginTop="136dp"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="129dp"
        android:text="47751177A"
        tools:layout_editor_absoluteY="130dp" />


    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textPassword"
        android:layout_alignStart="@+id/button"
        android:inputType="textPassword"
        android:text="cristian"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="200dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="203dp"
        android:text="Login"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="280dp" />

    <TextView
        android:id="@+id/textNIF"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/textPassword"
        android:layout_alignTop="@+id/txtNIF"
        android:gravity="center"
        android:text="NIF"
        android:textAlignment="center"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="132dp" />


    <TextView
        android:id="@+id/textPassword"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="207dp"
        android:gravity="center"
        android:text="Password"
        android:textAlignment="center"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="200dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="102dp"
        android:layout_height="106dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp"
        android:visibility="invisible"/>


</RelativeLayout >