<Page Height="700" Width="1200"
    x:Class="Tornejos.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tornejos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <DataTemplate x:Key="TornejosTemplate">

            <StackPanel Orientation="Horizontal">
                <Border>
                    <TextBlock x:Name="txbDataTornejos" Text="{Binding Informacio}" Width="400"/>
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="GrupsTemplate">

            <StackPanel Orientation="Horizontal">
                <Border>
                    <TextBlock x:Name="txbTotalPartidesGrups" Text="{Binding TotalPartidasJugadasTotal}" Width="400"/>
                </Border>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>




    <Grid Height="700" Width="1200">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Pivot Grid.Column="1">
                <PivotItem Header="Tornejos">
                    <Grid>
                        <TextBox x:Name="txbTitol" HorizontalAlignment="Right" Margin="0,78,384,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" Height="4"/>
                        <TextBlock x:Name="textBlock" Text="Titol" HorizontalAlignment="Left" Margin="10,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.185,-0.4" Width="62" FontSize="20" Height="32"></TextBlock>
                        <TextBlock x:Name="textBlock_Copy" Text="Modalitat" HorizontalAlignment="Left" Margin="10,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.185,-0.4" Width="88" FontSize="20" Height="32"/>
                        <ComboBox x:Name="cmbModalitats" HorizontalAlignment="Left" Margin="103,115,0,0" VerticalAlignment="Top" Width="289"/>
                        <TextBlock x:Name="textBlock_Copy1" Text="Data" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.185,-0.4" Width="62" FontSize="20" Height="32"/>
                        <DatePicker x:Name="dtpDataTorneig" HorizontalAlignment="Left" Margin="72,41,0,0" VerticalAlignment="Top" Width="320"/>
                        <Button x:Name="btnCrearTorneig" Content="Crear Torneig" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top"/>

                    </Grid>
                </PivotItem>
                <PivotItem Header="Grups">
                    <Grid>


                    </Grid>
                </PivotItem>
                <PivotItem Header="Classificació">
                    <Grid>


                    </Grid>
                </PivotItem>
                <PivotItem Header="Entrada de resultats">
                    <Grid>


                    </Grid>
                </PivotItem>
                <PivotItem Header="Reports">
                    <Grid>


                    </Grid>
                </PivotItem>
            </Pivot>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="122,8,0,0" TextWrapping="Wrap" Text="Llistat de Tornejos" VerticalAlignment="Top" FontSize="20"/>
            <ListView x:Name="lvTornejos" SelectionChanged="lvTornejos_SelectionChanged" ItemTemplate="{StaticResource TornejosTemplate}" HorizontalAlignment="Left" Height="325" Margin="10,42,0,0" VerticalAlignment="Top" Width="380"/>
            <ListView x:Name="lvGrups" IsEnabled="False" ItemTemplate="{StaticResource GrupsTemplate}" HorizontalAlignment="Left" Height="217" Margin="10,372,0,0" VerticalAlignment="Top" Width="380"/>
            <Button x:Name="btnFiltreData" Content="Data ascendent" HorizontalAlignment="Left" Margin="10,594,0,0" VerticalAlignment="Top" Width="123"/>
            <Button x:Name="btnEsborrar" Content="Esborrar Torneig" HorizontalAlignment="Left" Margin="262,658,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnTancar" Content="Tancar Torneig" HorizontalAlignment="Left" Margin="10,658,0,0" VerticalAlignment="Top" Width="123"/>
            <Button x:Name="btnFiltreEstat" Content="Estat obert" HorizontalAlignment="Left" Margin="262,594,0,0" VerticalAlignment="Top" Width="128"/>

        </Grid>
    </Grid>
</Page>
